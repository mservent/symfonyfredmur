{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

<table class="table table-hover table-secondary table-striped table-sm table align-middle mt-5">
    <thead>
        <th class="h1">
            <div class="divider-custom-icon text-end mb-2">
                <i class="fas fa-hand-peace pe-0 iconeCat"></i>
            </div>
        </th>
        <th>
            <p>
            <h1 class="text-center me-5">Les catégories de Kui-Kui</h1>
            </p>
        </th>


    </thead>
    <tbody>
        {% for categorie in categories %}
        <tr class="align-top">
            <td colspan="2">
                <p class="text-wrap text-dark text-center ms-5 h3"> <a class="link-dark" style="text-decoration : none"
                        href="{{ path('forum_categorie_discussions', {id: categorie.id}) }}">{{categorie.nom}}</a>
                </p>
            </td>

        </tr>
        {% else %}
        <tr class="mt-5">
            <td colspan="2">Il n'y a pas de catégories</td>
        </tr>
        {% endfor %}

    </tbody>
</table>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
<script src="https://kit.fontawesome.com/fd7413c868.js" crossorigin="anonymous"></script>
{{ parent() }}
{{ encore_entry_script_tags('app') }}
{% endblock %}