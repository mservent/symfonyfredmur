{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron text-center mt-5 mb-5">


    {% if commentaire.id %}
    <h3 class="jumbotron-text-center">Signalement du commentaire</h3>
    <br>
    <p class="text-sm-start lh-lg bg-white">{{ commentaire.contenu }}</p>
    {{ form_start(formSignalement) }}
    <p class="h4 text-sm-start mt-5">{{ form_label(formSignalement.motif, 'Motif du signalement', {'attr':
        {'class':
        'motifSignalement'}})
        }}</p>
    {{ form_widget(formSignalement.motif, {'attr':
    { 'style' : 'width: 100%',
    'rows' : '5',
    'cols' : '30' }}) }}
    <button type="submit" class="mt-3 btn btn-dark">Envoyer !</button>
    {{ form_end(formSignalement) }}
    {% endif %}
</div>
<div class="position-absolute" style="right: 10px">
    <a href="{{ path('forum')}}" class="btn btn-secondary btn-lg">Retour</a>
</div>
{% endblock %}

{% block stylesheets %}
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
<link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet"
    type="text/css" />
{{ parent() }}
{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
<script src="https://kit.fontawesome.com/fd7413c868.js" crossorigin="anonymous"></script>
{{ parent() }}
{{ encore_entry_script_tags('app') }}
{% endblock %}