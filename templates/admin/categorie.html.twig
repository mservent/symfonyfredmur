{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<h1>Liste des categories</h1>

{% for message in app.flashes('info')%}
<div class="alert alert-warning">
    {{ message }}
</div>
{% endfor %}

<table class="table table-hover">
    <thead>
        <th>Id</th>
        <th>Nom</th>
        <th>Actions</th>
    </thead>
    <tbody>
        {% for categorie in categories %}
        <tr>
            <td>{{ categorie.id }}</td>
            <td>{{ categorie.nom }}</td>
            <td><a href="{{ path('admin_modifier_categorie', {'id': categorie.id}) }}" class="btn btn-dark">Modifier</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="2">Il n'y a pas de catégories</td>
        </tr>
        {% endfor %}

    </tbody>
</table>

<div><a href="{{ path('admin_create_categorie') }}" class="btn btn-dark">Ajouter</a></div>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
<script src="https://kit.fontawesome.com/fd7413c868.js" crossorigin="anonymous"></script>
{{ parent() }}
{{ encore_entry_script_tags('app') }}
{% endblock %}